
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-12 col-lg-10 offset-lg-1 ">



      <div class="row mx-auto">
        <div class="col">
          <h2 class="fas fa-wrench m-5 rounded p-3 border border-secondary">タスク登録</h2>
        </div>
      </div>
      <%= form_for(@tasks) do |f| %>

        <div class="row mb-3">
          <%= f.label :タスク名, class:"col-3 col-form-label" %>

          <div class="col-12 col-lg-8">
            <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :タスク内容, class:"col-3 col-form-label" %>
          <div class="col-12 col-lg-8">
            <%= f.text_field :body, autofocus: true, class:"form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :重要度, class:"col-3 col-form-label" %>
          <div class="col-12 col-lg-8">
            <%= f.text_field :importance, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>

        <div class="row m-5">
          <div class="col-3">
          </div>
          <div class="col-6">
          　<%= f.submit "            編集内容を保存           ", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
      <div><%= link_to '戻る', tasks_path, class:"btn btn-success" %></div>
    </div>
  </div>
</div>