<div class="container pl-5 mb-5">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-12 col-lg-6 border border-top-0 mt-5">
      <h1 class="fas fa-user-plus">新規登録</h1>
      <%= form_for(@users) do |f| %>

      　<div class="field">
          <%= f.label :名前, class: "form-label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "名前" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>



        <div class="field">
          <%= f.label :パスワード, class: "form-label" %>

          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード (確認)", class: "form-label" %>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>


        <div class="row justify-content-end">
          <div class="col-3">
            <%= f.submit "Sign up", class: "btn btn-outline-success rounded-pill" %>
          </div>
        </div>
      <% end %>


    </div>
  </div>
</div>